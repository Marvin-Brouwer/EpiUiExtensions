{
	"$schema": "https://json.schemastore.org/tsconfig",
	"files": [
		"./src/index.ts"
	],
	"compilerOptions": {
		"removeComments": false,
		"target": "es2020",
		"moduleResolution": "nodenext",
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"noImplicitThis": true,
		"lib": [
		  "DOM",
		  "es2015",
		  "scripthost"
		],
		"module": "NodeNext",
		"outDir": "./dist"
	}
}